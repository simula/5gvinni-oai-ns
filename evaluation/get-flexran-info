PREFIX="$1"
if [ "$PREFIX" == "" ] ; then
   PREFIX="/tmp/flexran"
fi
FLEXRAN_CONTROLLER="127.0.0.1"

i=0
while [ true ] ; do
   jsonFile=`printf "%s-%04i.json.xz" "$PREFIX" $i`
   curl -X GET http://${FLEXRAN_CONTROLLER}:9999/stats/enb/-1/ | jq . | xz -T0 -c >${jsonFile} || true
   sleep 1
   let i=$i+1
done
