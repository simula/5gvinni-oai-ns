#!/bin/bash -e

export VERSION=14.0-fourteen

sudo apt install -y cmake colordiff curl git joe python3-virtualenv snapd virtualenv yamllint


echo "###### Installing OSM ################################################"
cd ~
rm -f install_osm.sh
wget https://osm-download.etsi.org/ftp/osm-${VERSION}/install_osm.sh
chmod +x install_osm.sh
./install_osm.sh -y 2>&1 | tee osm_install_log.txt


echo "###### Installing \"charm\" snap #####################################"
sudo snap install charm --classic

echo "###### Adding VIM #####################################################"
~/vim
